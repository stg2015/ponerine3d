<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/ll_container"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:textSize="@dimen/sp_font_16sp"
        android:text="demo"
        android:gravity="center"/>
    <Button
        android:id="@+id/btn_retrofit1_async"
        android:text="retrofit1_async"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="44dp"
        android:gravity="left"
        />
    <Button
        android:id="@+id/btn_retrofit1_obserable"
        android:text="retrofit1_obserable"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="44dp"
        android:gravity="left"/>
    <Button
        android:id="@+id/btn_retrofit2_call"
        android:text="retrofit2_call"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="44dp"
        android:gravity="left"/>
    <Button
        android:id="@+id/btn_retrofit2_obserable"
        android:text="retrofit2_obserable"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="44dp"
        android:gravity="left"/>
</LinearLayout>